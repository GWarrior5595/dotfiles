" vim: set ft=vimperator:

" ctrl-a is highlight all
inoremap <C-a> <C-Home><C-S-End> 

map <silent> <C-F8> :js toggle_bottombar()<CR> " toggle status bar with ctrl-F8

:js << EOF
function toggle_bottombar() {
  var bb = document.getElementById('liberator-bottombar');
  if (!bb)
    return;
  bb.style.height = (bb.style.height == '') ? '0px' : '';
  bb.style.overflow = (bb.style.height == '') ? '' : 'hidden';
}
EOF


" use < and > to navigate tabs
nnoremap < gT
nnoremap > gt

" faster scrolling
nnoremap h 5h
nnoremap j 5j
nnoremap k 5k
nnoremap l 5l
